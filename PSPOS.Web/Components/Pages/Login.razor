@page "/login"

<h3>Login</h3>
<form action="/api/auth/login" method="post">
    <div>
        <label>Email</label>
        <input type="email" name="Email" required />
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="Password" required />
    </div>
    <button type="submit">Login</button>
</form>
